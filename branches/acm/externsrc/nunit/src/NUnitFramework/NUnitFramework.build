<?xml version="1.0"?>
<project name="NUnit.Core" default="build">

  <property name="project.src.dir" value=".."
    unless="${property::exists('project.src.dir')}"/>

  <include buildfile="../nunit.build.include"/>
  
  <target name="clean">
    <nant buildfile="framework/nunit.framework.build"
      target="clean"/>
    <nant buildfile="core/nunit.core.build" 
      target="clean"/>
    <nant buildfile="tests/nunit.framework.tests.build"
      target="clean"/>
  </target>

  <target name="build">
    <nant buildfile="framework/nunit.framework.build"
      target="build"/>
    <nant buildfile="core/nunit.core.build" 
      target="build"/>
  </target>

  <target name="build-tests">
    <nant target="build"
      buildfile="tests/nunit.framework.tests.build"/>
  </target>

  <target name="package">
    <nant buildfile="framework/nunit.framework.build"
      target="package"/>
    <nant buildfile="core/nunit.core.build" 
      target="package"/>
    <nant buildfile="tests/nunit.framework.tests.build"
      target="package"/>

    <copy todir="${package.src.dir}/NUnitFramework"
      file="NUnitFramework.build"/>
  </target>

</project>