<?xml version="1.0"?>
<project name="NUnit.Core" default="build">

  <property name="project.src.dir" value=".."
    unless="${property::exists('project.src.dir')}"/>

  <include buildfile="../nunit.build.include"/>

  <target name="clean">
    <nant target="clean"
      buildfile="nunit-gui/nunit-gui.build"/>
    <nant target="clean"
      buildfile="nunit-gui-exe/nunit-gui.exe.build"/>
    <nant target="clean"
      buildfile="tests/nunit-gui.tests.build"/>
  </target>

  <target name="build">
    <nant target="build"
      buildfile="nunit-gui/nunit-gui.build"/>
    <nant target="build"
      buildfile="nunit-gui-exe/nunit-gui.exe.build"/>
  </target>

  <target name="build-tests">
    <nant target="build"
      buildfile="tests/nunit-gui.tests.build"/>
  </target>

  <target name="package">
    <nant target="package"
      buildfile="nunit-gui/nunit-gui.build"/>
    <nant target="package"
      buildfile="nunit-gui-exe/nunit-gui.exe.build"/>
    <nant target="package"
      buildfile="tests/nunit-gui.tests.build"/>

    <copy todir="${package.src.dir}/GuiRunner"
      file="GuiRunner.build"/>
  </target>

</project>