<?xml version="1.0"?>
<project name="NUnit.Tests" default="build">

  <include buildfile="../../nunit.project.include"/>

  <property name="current.build.output" value="mock-assembly"/>

  <target name="build" depends="make-build-dir">
    <csc target="library" 
        output="${current.build.dir}/mock-assembly.dll" 
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <include name="*.cs"/>
        <include name="../../CommonAssemblyInfo.cs"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.core.dll"/>
      </references>
    </csc>

    <copy file="mock-assembly.dll.config" todir="${current.build.dir}"/>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests/mock-assembly">
      <fileset basedir=".">
        <include name="*.csproj"/>
        <include name="*.build"/>
        <include name="*.config"/>
        <include name="*.cs"/>
      </fileset>
    </copy>
  </target>
</project>
