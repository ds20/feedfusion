<Window x:Class="WinFXConsumer.optionsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WinFXConsumer" Height="119" Width="314"
    >
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition ></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition> 
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
      </Grid.RowDefinitions>
      <Label Margin ="3" Grid.Column ="0" Grid.Row ="0" Content ="Feed autorefresh inteval "></Label>
      <TextBox Grid.Column ="1" Grid.Row="0" x:Name ="txtInterval" Width ="100" Height ="20"></TextBox>
      <CheckBox Margin="3" Grid.Column ="0" Grid.Row ="1" x:Name="chkDelete" Content ="Automaticly delete history"></CheckBox>
      <Button Margin ="3" Grid.Row ="1" Grid.Column ="1" Content ="Delete history now" x:Name ="btndelete"></Button>
      <Button Margin="3"  Grid.Column ="1" Grid.Row="2"  x:Name="btnApply"  Content="Apply" Width="100"></Button>
    </Grid>
</Window>
